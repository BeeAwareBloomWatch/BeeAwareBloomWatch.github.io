    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Trigger fade-in animations on page load
            setTimeout(() => {
                document.getElementById('home-section').classList.add('loaded');
            }, 100);

            setTimeout(() => {
                const contentWrapper = document.querySelector('#home-section .content-wrapper');
                if (contentWrapper) {
                    contentWrapper.classList.add('loaded');
                }
            }, 300);

            // Intersection Observer for flower section fade-in on scroll
            const observerOptions = {
                threshold: 0.2,
                rootMargin: '0px 0px -100px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, observerOptions);

            const flowerSection = document.querySelector('.flower-section');
            if (flowerSection) {
                observer.observe(flowerSection);
            }

            // Smooth scroll for scroll indicator
            const scrollIndicator = document.querySelector('.scroll-indicator');
            if (scrollIndicator) {
                scrollIndicator.addEventListener('click', () => {
                    document.querySelector('#flower-section').scrollIntoView({ behavior: 'smooth' });
                });
            }

            // Flying bee animation
            const bee = document.getElementById('flying-bee');
            if (bee) {
                let t = 0;
                const speed = 0.005;
                bee.style.willChange = "transform";

                function animateBee() {
                    const W = window.innerWidth;
                    const H = window.innerHeight;

                    const centerX = W / 2;
                    const centerY = H / 2;
                    const x = centerX 
                            + 300 * Math.cos(t) 
                            + 150 * Math.sin(3*t) 
                            + 100 * Math.cos(5*t);
                    const y = centerY 
                            + 200 * Math.sin(t) 
                            + 120 * Math.cos(2*t) 
                            + 80 * Math.sin(4*t);

                    const dt = 0.001;
                    const xNext = centerX 
                                + 300 * Math.cos(t + dt) 
                                + 150 * Math.sin(3*(t + dt)) 
                                + 100 * Math.cos(5*(t + dt));
                    const yNext = centerY 
                                + 200 * Math.sin(t + dt) 
                                + 120 * Math.cos(2*(t + dt)) 
                                + 80 * Math.sin(4*(t + dt));

                    const dx = xNext - x;
                    const dy = yNext - y;

                    let angle = Math.atan2(dy, dx) * (180 / Math.PI) + 180;

                    bee.style.transform = `translate(${x}px, ${y}px) rotate(${angle}deg)`;

                    t += speed;
                    requestAnimationFrame(animateBee);
                }

                animateBee();
            }
        });
    </script>
</body>
